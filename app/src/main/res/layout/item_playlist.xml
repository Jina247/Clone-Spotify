<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="175dp"
    android:layout_height="56dp"
    android:backgroundTint="@color/grey_background"
    android:layout_marginTop="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageAlb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/albumImage"
            android:scaleType="centerCrop"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Playlist02Tittle"
            android:id="@+id/PlaylistTittle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/grey_background"
            android:ellipsize="end"
            android:fontFamily="@font/be_vietnam_pro_semibold"
            android:gravity="start|center"
            android:maxLines="2"
            android:padding="8dp"
            android:text="@string/sample_title"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:cornerRadius="5dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>