<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="198dp"
    android:layout_marginEnd="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/horizontalCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black">

            <ImageButton
                android:id="@+id/AlbImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/albumImage"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/horizontalCardView"
                app:layout_constraintStart_toStartOf="@id/horizontalCardView"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Playlist02Tittle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ellipsize="end"
                android:fontFamily="@font/be_vietnam_pro_light"
                android:gravity="start"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/sample_title"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:alpha="0.77"
                android:textSize="12sp"
                app:cornerRadius="0dp"
                app:layout_constraintTop_toBottomOf="@id/AlbImage"
                app:layout_constraintStart_toStartOf="@+id/horizontalCardView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>